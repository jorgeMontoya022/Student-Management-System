<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #f5f5f5;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.gestionestudiantes.gestionestudiantesapp.view.CursoEstudianteViewController">
    <children>
        <!-- Header Section -->
        <VBox alignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0">
            <HBox alignment="CENTER" spacing="10">
                <Label text="CURSOS DE" style="-fx-text-fill: #2c3e50;">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Label fx:id="labelNombre" text="NOMBRE" style="-fx-text-fill: #3498db;">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </HBox>
            <Separator style="-fx-background-color: #bdc3c7;">
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
            </Separator>
        </VBox>

        <!-- Table View -->
        <TableView fx:id="tableCursos" layoutY="100.0"
                   style="-fx-background-radius: 5; -fx-border-radius: 5;"
                   AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0"
                   AnchorPane.topAnchor="100.0" AnchorPane.bottomAnchor="50.0">
            <columns>
                <TableColumn fx:id="tcCursoNombre" text="Nombre del Curso" prefWidth="300.0" />
                <TableColumn fx:id="tcCodigo" text="CÃ³digo del Curso" prefWidth="150.0" />
                <TableColumn fx:id="tcProfesor" text="Nombre del Profesor" prefWidth="250.0" />
            </columns>
            <effect>
                <DropShadow color="#00000022" />
            </effect>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </children>

    <padding>
        <Insets bottom="20" />
    </padding>
</AnchorPane>
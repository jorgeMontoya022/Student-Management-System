<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom right, #f8f9fa, #e9ecef);"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.gestionestudiantes.gestionestudiantesapp.view.EstudiantesCursoViewController">

    <VBox spacing="20" style="-fx-background-color: white;                              -fx-background-radius: 20;                              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);"
          AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

        <!-- Header -->
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 25 20 15 20;                                                     -fx-background-color: #469fff22;                                                     -fx-background-radius: 20 20 0 0;">
            <HBox alignment="CENTER" spacing="8">
                <Label style="-fx-text-fill: #2d3436;                                               -fx-font-family: 'SF Pro Display', 'Segoe UI', System;                                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 1);" text="Estudiantes de">
                    <font>
                        <Font size="28.0" />
                    </font>
                </Label>
                <Label fx:id="labelCurso" style="-fx-text-fill: #469fff;                               -fx-font-family: 'SF Pro Display', 'Segoe UI', System;                               -fx-font-weight: bold;                               -fx-effect: dropshadow(gaussian, rgba(70,159,255,0.2), 4, 0, 0, 1);" text="Curso">
                    <font>
                        <Font size="28.0" />
                    </font>
                </Label>
            </HBox>

            <!-- Información adicional -->
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10 0 0 0;">
                <Label fx:id="labelPeriodoAcadémico" style="-fx-text-fill: #666666;                               -fx-font-size: 14px;" text="Periodo Académico 2024-1" />
                <Separator orientation="VERTICAL" style="-fx-background-color: #469fff44;                                  -fx-pref-height: 20;" />
                <Label fx:id="labelTotalEstudiantes" style="-fx-text-fill: #666666;                               -fx-font-size: 14px;" text="Total Cursos: 6" />
            </HBox>
        </VBox>

        <!-- Barra de búsqueda y filtros -->
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 20;">
            <TextField fx:id="txtFiltrarEstudiante" prefWidth="250" promptText="Buscar estudiante..." style="-fx-background-color: #f8f9fa;                              -fx-background-radius: 8;                              -fx-border-color: #dee2e6;                              -fx-border-radius: 8;                              -fx-padding: 8;" />
            <ComboBox fx:id="cbTipoFiltro" prefWidth="150" promptText="Filtrar por..." style="-fx-background-color: #f8f9fa;                              -fx-background-radius: 8;                              -fx-border-color: #dee2e6;                              -fx-border-radius: 8;" />
        </HBox>

        <!-- Tabla de Estudiantes -->
        <TableView fx:id="tableEstudiantes" style="-fx-background-color: transparent;                           -fx-border-color: #dee2e6;                           -fx-border-radius: 12;                           -fx-background-radius: 12;                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="tcNombre" text="Nombre del Estudiante" prefWidth="250.0" style="-fx-alignment: CENTER-LEFT; -fx-font-family: 'SF Pro Text', 'Segoe UI', System; -fx-font-size: 13px;" />
                <TableColumn fx:id="tcDocumento" text="Documento" prefWidth="150.0" style="-fx-alignment: CENTER; -fx-font-family: 'SF Pro Text', 'Segoe UI', System; -fx-font-size: 13px;" />
                <TableColumn fx:id="tcCorreo" text="Correo" prefWidth="200.0" style="-fx-alignment: CENTER-LEFT; -fx-font-family: 'SF Pro Text', 'Segoe UI', System; -fx-font-size: 13px;" />
                <TableColumn fx:id="tcTelefono" text="Teléfono" prefWidth="150.0" style="-fx-alignment: CENTER; -fx-font-family: 'SF Pro Text', 'Segoe UI', System; -fx-font-size: 13px;" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </TableView>

        <!-- Footer -->
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10 20 20 20;">
            <Label fx:id="labelUltimaActualizacion" style="-fx-text-fill: #666666;                           -fx-font-size: 12px;" text="Última actualización: 05/01/2024" />
            <Region HBox.hgrow="ALWAYS" />
            <Button style="-fx-background-color: #469fff22;                            -fx-text-fill: #469fff;                            -fx-background-radius: 8;                            -fx-padding: 8 16;                            -fx-cursor: hand;" text="Exportar Lista" />
        </HBox>

        <padding>
            <Insets bottom="10" />
        </padding>
    </VBox>
</AnchorPane>

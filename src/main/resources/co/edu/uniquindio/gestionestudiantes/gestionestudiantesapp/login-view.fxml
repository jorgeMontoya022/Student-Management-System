<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.gestionestudiantes.gestionestudiantesapp.view.LoginViewController">
    <children>
        <!-- Background Design Elements -->
        <Circle centerX="200" centerY="-100" fill="#469fff" opacity="0.1" radius="300" />
        <Circle centerX="700" centerY="500" fill="#d1e9ff" opacity="0.2" radius="200" />

        <!-- Main Content Container -->
        <StackPane alignment="CENTER" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <Rectangle arcHeight="40" arcWidth="40" fill="white" height="400" width="720">
                <effect>
                    <DropShadow color="#00000033" radius="20" spread="0.1" />
                </effect>
            </Rectangle>

            <!-- Content Layout -->
            <StackPane maxHeight="400" maxWidth="720">
                <children>
                    <!-- Left Side - Welcome Panel -->
                    <VBox alignment="CENTER" maxHeight="400" maxWidth="360" style="-fx-background-color: #469fff;" StackPane.alignment="CENTER_LEFT">
                        <StackPane.margin>
                            <Insets />
                        </StackPane.margin>
                        <padding>
                            <Insets bottom="40" top="40" />
                        </padding>

                        <!-- Welcome Text Container -->
                        <VBox alignment="CENTER" spacing="20">
                            <Label style="-fx-text-fill: white;" text="BIENVENIDO">
                                <font>
                                    <Font name="System Bold" size="42.0" />
                                </font>
                            </Label>
                            <Label style="-fx-text-fill: white; -fx-opacity: 0.9" text="Sistema de Gestión">
                                <font>
                                    <Font size="18.0" />
                                </font>
                            </Label>
                            <Rectangle fill="white" height="4" opacity="0.7" width="60" />

                            <!-- Botón de Volver al Inicio -->
                            <Button fx:id="btnVolver" onAction="#onVolverClick" style="-fx-background-color: transparent;
                                                                                     -fx-text-fill: white;
                                                                                     -fx-border-color: white;
                                                                                     -fx-border-radius: 25;
                                                                                     -fx-padding: 12 50;
                                                                                     -fx-cursor: hand;"
                                    text="VOLVER AL INICIO">
                                <font>
                                    <Font name="System Bold" size="14.0" />
                                </font>
                                <VBox.margin>
                                    <Insets top="20" />
                                </VBox.margin>
                            </Button>
                        </VBox>
                    </VBox>

                    <!-- Right Side - Login Form -->
                    <VBox alignment="CENTER" maxWidth="360" spacing="25" style="-fx-background-color: white;" StackPane.alignment="CENTER_RIGHT">
                        <padding>
                            <Insets left="40" right="40" />
                        </padding>

                        <!-- Header -->
                        <VBox alignment="CENTER" spacing="5">
                            <Label style="-fx-text-fill: #2c3e50;" text="INICIAR SESIÓN">
                                <font>
                                    <Font name="System Bold" size="24.0" />
                                </font>
                            </Label>
                            <Label style="-fx-text-fill: #95a5a6;" text="Ingrese sus credenciales">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </Label>
                        </VBox>

                        <!-- Email Field -->
                        <VBox spacing="5">
                            <TextField fx:id="txtCorreo" promptText="Correo electrónico" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8;                                             -fx-border-radius: 8; -fx-padding: 12;">
                                <effect>
                                    <DropShadow color="#0000000d" radius="5" spread="0.02" />
                                </effect>
                            </TextField>
                        </VBox>

                        <!-- Password Field -->
                        <VBox spacing="5">
                            <PasswordField fx:id="txtId" promptText="Número de identidad" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8;                                                 -fx-border-radius: 8; -fx-padding: 12;">
                                <effect>
                                    <DropShadow color="#0000000d" radius="5" spread="0.02" />
                                </effect>
                            </PasswordField>
                        </VBox>

                        <!-- Login Button -->
                        <Button fx:id="btnIngresar" onAction="#onIngresar" style="-fx-background-color: #469fff; -fx-text-fill: white;                                        -fx-background-radius: 25; -fx-padding: 12 50;                                        -fx-cursor: hand;" text="INGRESAR">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                            <effect>
                                <DropShadow color="#469fff66" radius="15" spread="0.1" />
                            </effect>
                        </Button>

                        <!-- Forgot Password Button -->
                        <Button fx:id="btnRecordarContraseña" onAction="#onRecordarContraseña" style="-fx-background-color: transparent;                                       -fx-text-fill: #469fff;                                       -fx-border-color: transparent;                                       -fx-padding: 8 16;                                       -fx-cursor: hand;                                       -fx-background-radius: 20;                                       -fx-border-radius: 20;" text="¿Olvidaste tu contraseña?">
                            <font>
                                <Font size="12.0" />
                            </font>
                            <style>
                                -fx-background-color: transparent;
                            </style>
                        </Button>
                    </VBox>
                </children>
            </StackPane>
        </StackPane>
    </children>
</AnchorPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: #f5f6fa;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.gestionestudiantes.gestionestudiantesapp.view.GestionCursosViewController">
    <children>
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" prefHeight="80.0" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
                <padding>
                    <Insets left="30.0" right="30.0" />
                </padding>
                <Label style="-fx-text-fill: #1a237e;" text="Gestión de Cursos">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </HBox>

            <!-- Content Area -->
            <VBox spacing="20">
                <padding>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                </padding>

                <!-- Search Bar -->
                <HBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 10;">
                    <effect>
                        <DropShadow>
                            <color>
                                <Color opacity="0.1" />
                            </color>
                        </DropShadow>
                    </effect>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                    <TextField fx:id="txtFiltrar" promptText="Buscar curso..."
                               style="-fx-background-color: transparent; -fx-padding: 5;" HBox.hgrow="ALWAYS" />
                </HBox>

                <!-- Form Card -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 10;">
                    <effect>
                        <DropShadow>
                            <color>
                                <Color opacity="0.1" />
                            </color>
                        </DropShadow>
                    </effect>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>

                    <GridPane hgap="20" vgap="15">
                        <!-- Form Fields -->
                        <Label style="-fx-text-fill: #424242;" text="Nombre del curso"
                               GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="txtNombreCurso"
                                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0;"
                                   GridPane.columnIndex="0" GridPane.rowIndex="1" />

                        <Label style="-fx-text-fill: #424242;" text="Código del curso"
                               GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <TextField fx:id="txtCodigo"
                                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label style="-fx-text-fill: #424242;" text="Nombre del profesor"
                               GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="txtProfesor"
                                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0;"
                                   GridPane.columnIndex="0" GridPane.rowIndex="3" />

                        <columnConstraints>
                            <ColumnConstraints percentWidth="50" />
                            <ColumnConstraints percentWidth="50" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                        </rowConstraints>
                    </GridPane>

                    <!-- Action Buttons -->
                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <VBox.margin>
                            <Insets top="20.0" />
                        </VBox.margin>
                        <Button fx:id="btnLimpiar" onAction="#onLimpiar"
                                style="-fx-background-color: #9e9e9e; -fx-text-fill: white; -fx-background-radius: 5;"
                                text="Limpiar" />
                        <Button fx:id="btnAgregar" onAction="#onAgregar"
                                style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-background-radius: 5;"
                                text="Agregar" />
                        <Button fx:id="btnActualizar" onAction="#onActualizar"
                                style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-background-radius: 5;"
                                text="Actualizar" />
                    </HBox>
                </VBox>

                <!-- Table Card -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
                    <effect>
                        <DropShadow>
                            <color>
                                <Color opacity="0.1" />
                            </color>
                        </DropShadow>
                    </effect>
                    <TableView fx:id="tableCursos"
                               style="-fx-background-color: transparent; -fx-border-color: transparent;"
                               VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="tcNombreCurso" style="-fx-alignment: CENTER-LEFT;"
                                         text="Nombre del Curso" />
                            <TableColumn fx:id="tcCodigo" style="-fx-alignment: CENTER-LEFT;"
                                         text="Código" />
                            <TableColumn fx:id="tcProfesor" style="-fx-alignment: CENTER-LEFT;"
                                         text="Profesor" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>

                    <!-- Table Actions -->
                    <HBox alignment="CENTER" spacing="10">
                        <padding>
                            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                        </padding>
                        <!-- Botón Ver Estudiantes -->
                        <Button fx:id="btnVerEstudiantes" onAction="#onVerEstudiantes"
                                style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-background-radius: 5;"
                                text="Ver Estudiantes" visible="false" />
                        <!-- Espaciador -->
                        <HBox HBox.hgrow="ALWAYS" />
                        <!-- Botón Eliminar -->
                        <Button fx:id="btnEliminar" onAction="#onEliminar"
                                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 5;"
                                text="Eliminar" />
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
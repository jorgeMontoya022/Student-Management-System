<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: #f5f6fa;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.gestionestudiantes.gestionestudiantesapp.view.AsignacionCursosViewController">
    <children>
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" prefHeight="80.0" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
                <padding>
                    <Insets left="30.0" right="30.0" />
                </padding>
                <Label style="-fx-text-fill: #1a237e;" text="Asignación de Cursos">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </HBox>

            <!-- Content Area -->
            <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                </padding>

                <!-- Left Panel - Student Selection -->
                <VBox prefWidth="400.0" spacing="20.0">
                    <!-- Search Student -->
                    <VBox style="-fx-background-color: white; -fx-background-radius: 10;">
                        <effect>
                            <DropShadow>
                                <color>
                                    <Color opacity="0.1" />
                                </color>
                            </DropShadow>
                        </effect>
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>

                        <Label style="-fx-text-fill: #424242;" text="Buscar Estudiante">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtBuscarEstudiante" promptText="Ingrese nombre o documento..." style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0;">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </TextField>
                    </VBox>

                    <!-- Students List -->
                    <VBox style="-fx-background-color: white; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
                        <effect>
                            <DropShadow>
                                <color>
                                    <Color opacity="0.1" />
                                </color>
                            </DropShadow>
                        </effect>
                        <TableView fx:id="tableEstudiantes" style="-fx-background-color: transparent;">
                            <columns>
                                <TableColumn fx:id="tcNombre" text="Nombre" />
                                <TableColumn fx:id="tcDocumento" text="Documento" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </VBox>
                </VBox>

                <!-- Right Panel - Course Assignment -->
                <VBox prefHeight="661.0" prefWidth="126.0" spacing="20.0" HBox.hgrow="ALWAYS">
                    <!-- Student Info Card -->
                    <VBox style="-fx-background-color: white; -fx-background-radius: 10;">
                        <effect>
                            <DropShadow>
                                <color>
                                    <Color opacity="0.1" />
                                </color>
                            </DropShadow>
                        </effect>
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>

                        <Label fx:id="lblEstudianteSeleccionado" style="-fx-text-fill: #1a237e;" text="Estudiante Seleccionado: No hay selección">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                    </VBox>

                    <!-- Course Assignment -->
                    <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10;">
                        <effect>
                            <DropShadow>
                                <color>
                                    <Color opacity="0.1" />
                                </color>
                            </DropShadow>
                        </effect>
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>

                        <Label style="-fx-text-fill: #424242;" text="Asignar Nuevo Curso">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>

                        <ComboBox fx:id="cbCursos" prefWidth="Infinity" promptText="Seleccione un curso" style="-fx-background-color: #f8f9fa; -fx-border-color: #469fff22; -fx-border-width: 2; -fx-border-radius: 5;" />

                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <Button fx:id="btnAsignar" onAction="#onAsignarCurso" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-background-radius: 5;" text="Asignar Curso" />
                        </HBox>
                    </VBox>

                    <!-- Assigned Courses -->
                    <VBox style="-fx-background-color: white; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
                        <effect>
                            <DropShadow>
                                <color>
                                    <Color opacity="0.1" />
                                </color>
                            </DropShadow>
                        </effect>
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>

                        <Label style="-fx-text-fill: #424242;" text="Cursos Asignados">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>

                        <TableView fx:id="tableCursosAsignados" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                            <columns>
                                <TableColumn fx:id="tcCodigo" text="Código" />
                                <TableColumn fx:id="tcCurso" text="Curso" />
                                <TableColumn fx:id="tcProfesor" text="Profesor" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>

                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                            <Button fx:id="btnEliminarCurso" onAction="#onEliminarCurso" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 5;" text="Eliminar Curso" />
                        </HBox>
                    </VBox>
                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="731.0" prefWidth="820.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.gestionestudiantes.gestionestudiantesapp.view.GestionEstudiantesViewController">
    <children>
        <!-- Header Section -->
        <VBox alignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <Label style="-fx-text-fill: #2c3e50;" text="Gestión de Estudiantes">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
                <padding>
                    <Insets bottom="20.0" top="20.0" />
                </padding>
            </Label>
            <Separator style="-fx-background-color: #bdc3c7;" />
        </VBox>

        <!-- Form Section -->
        <GridPane hgap="20" layoutX="50.0" layoutY="100.0" vgap="15" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Labels -->
            <Label style="-fx-text-fill: #34495e;" text="Nombre del estudiante:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Label style="-fx-text-fill: #34495e;" text="Documento de identidad:" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label style="-fx-text-fill: #34495e;" text="Correo electrónico:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <Label style="-fx-text-fill: #34495e;" text="Número de celular:" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <!-- Text Fields -->
            <TextField fx:id="txtNombre" promptText="Ingrese el nombre" style="-fx-background-radius: 5; -fx-border-radius: 5;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="txtDocumento" promptText="Ingrese el documento" style="-fx-background-radius: 5; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="txtCorreo" promptText="Ingrese el correo" style="-fx-background-radius: 5; -fx-border-radius: 5;" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="txtCelular" promptText="Ingrese el celular" style="-fx-background-radius: 5; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <columnConstraints>
                <ColumnConstraints percentWidth="50" />
                <ColumnConstraints percentWidth="50" />
            </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <!-- Buttons Section -->
        <HBox alignment="CENTER" layoutX="50.0" layoutY="289.0" spacing="20" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
            <Button fx:id="btnLimpiar" onAction="#onLimpiar" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5;" text="Limpiar">
                <effect>
                    <DropShadow color="#00000033" />
                </effect>
            </Button>
            <Button fx:id="btnAgregar" onAction="#onAgregar" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 5;" text="Agregar">
                <effect>
                    <DropShadow color="#00000033" />
                </effect>
            </Button>
            <Button fx:id="btnActualizar" onAction="#onActualizar" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;" text="Actualizar">
                <effect>
                    <DropShadow color="#00000033" />
                </effect>
            </Button>
        </HBox>

        <!-- Search Field -->
        <TextField fx:id="txtFiltrar"
                   layoutY="350"
                   promptText="Buscar estudiante..."
                   style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-background-color: white; -fx-border-color: #bdc3c7;"
                   AnchorPane.leftAnchor="50.0"
                   AnchorPane.rightAnchor="50.0"
                   AnchorPane.topAnchor="350.0">
            <padding>
                <Insets left="20" right="20" />
            </padding>
        </TextField>

        <!-- Table View -->
        <TableView fx:id="tableEstudiante"
                   style="-fx-background-radius: 5; -fx-border-radius: 5;"
                   AnchorPane.bottomAnchor="60.0"
                   AnchorPane.leftAnchor="50.0"
                   AnchorPane.rightAnchor="50.0"
                   AnchorPane.topAnchor="400.0">
            <columns>
                <TableColumn fx:id="tcNombre" text="Nombre">
                    <minWidth>100.0</minWidth>
                    <maxWidth>Infinity</maxWidth>
                </TableColumn>
                <TableColumn fx:id="tcDocumento" text="Documento">
                    <minWidth>100.0</minWidth>
                    <maxWidth>Infinity</maxWidth>
                </TableColumn>
                <TableColumn fx:id="tcCorreo" text="Correo">
                    <minWidth>100.0</minWidth>
                    <maxWidth>Infinity</maxWidth>
                </TableColumn>
                <TableColumn fx:id="tcCelular" text="Celular">
                    <minWidth>100.0</minWidth>
                    <maxWidth>Infinity</maxWidth>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <effect>
                <DropShadow color="#00000022" />
            </effect>
        </TableView>

        <!-- Bottom Button -->
        <Button fx:id="btnEliminar" layoutX="711.0" layoutY="734.0" onAction="#onEliminar" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;" text="Eliminar" AnchorPane.bottomAnchor="20.66666666666663" AnchorPane.rightAnchor="50.33333333333337">
            <effect>
                <DropShadow color="#00000033" />
            </effect>
        </Button>

        <Button fx:id="btnVerCursos" onAction="#onVerCursos" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-background-radius: 5;" text="Ver Cursos" visible="false" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="50.0">
            <effect>
                <DropShadow color="#00000033" />
            </effect>
        </Button>
    </children>
</AnchorPane>
